<% provide(:title, 'Edit Book') %>
<h1>Update Book</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @book do |f| %>
      <%= render 'book_error_messages' %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.label :author %>
      <%= f.text_field :author, class: 'form-control' %>
      <%= f.label :number %>
      <%= f.text_field :number, class: 'form-control' %>
      <%= f.input :categories, collection: @categories, as: :check_boxes,  value_method: :name %>
      <%= f.submit "Edit Book", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>