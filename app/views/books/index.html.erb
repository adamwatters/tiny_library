<% if params[:search] %>
  <h1> <%= params[:search] %> </h1>
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <%= render "filter" %>
    </div>
    <div class="col-md-8">
      <% provide(:title, params[:search])%>
      <ul class="books">
        <%= render @books %>
      </ul>
    </div>
  </div>
<% elsif params[:filter] %>
  <h1> <%= params[:filter] %> </h1>
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <%= render "filter" %>
    </div>
    <div class="col-md-8">
      <% provide(:title, params[:search])%>
      <ul class="books">
        <%= render @books %>
      </ul>
    </div>
  </div>
<% else %>
  <h1> All Books </h1>
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <%= render "filter" %>
    </div>
    <div class="col-md-8">
      <% provide(:title, 'All books') %>
      <%= will_paginate %>
      <ul class="books">
        <%= render @books %>
      </ul>
      <%= will_paginate %>
    </div>
  </div>
<% end %>