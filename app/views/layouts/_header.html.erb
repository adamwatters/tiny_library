<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <nav>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Heartwood Library", root_path, id: "logo" %>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Books", books_path %></li>
          <% if logged_in? && admin_user? %>
            <li><%= link_to "Add Book", new_book_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <% if logged_in? %>
              <li><%= link_to "Log out", logout_path, method: "delete" %></li>
            <% else %>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
          <% end %>
        </ul>
        <%= form_tag(books_path, :method => "get", class: "navbar-form navbar-right", id: "search-form") do %>
          <%= content_tag(:div, class: "form-group") do %>
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Books" %>
          <% end %>
          <%= button_tag "Search", class: "btn btn-default" %>
        <% end %>
      </div>
    </nav>
  </div>
</header>